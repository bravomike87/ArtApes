
<div class="container">
  <div class="row mt-5">
    <div class="col-12 col-lg-4">
      <%= link_to "Back to all artwork", artworks_path, :class => "mb-3 btn bg-transparent text-primary pl-0" %>
      <h1><%= @artwork.title %></h1>
      <h3><%= @artwork.tagline %></h3>
      <div class="d-flex">
        <% if policy(@artwork).edit? %>
          <%= link_to "Edit Artwork", edit_artwork_path(@artwork), :class => "pl-0 btn bg-transparent text-secondary mr-3"  %>
        <% end %>
        <% if policy(@artwork).destroy? %>
          <%= link_to "Delete Artwork", artwork_path(@artwork), method: :delete, data: { confirm: "Are you sure?" } , :class => "btn bg-transparent text-secondary ml-3"  %>
        <% end %>
      </div>
      <div class="artwork-description">
        <h3>Description<h3>
        <p><%= @artwork.description %></p>
      </div>

    </div>

    <div class="col-12 col-lg-8" >
      <div class="artwork-img-box">
        <% if @artwork.image? %>
          <%= cl_image_tag @artwork.image, class: "artwork-img" %>
        <% end %>
      </div>
    </div>
    <div>

    </div>


  </div>






















  <div class="row">

    <p> - <%=  @artwork.price %> â‚¬/day</p>



      <p> Kind: <%= @artwork.kind %></p>
      <p> Size <%= @artwork.width %>cm x <%= @artwork.height %>cm</p>
  </div>

  <div class="row">
    <% if @artwork.user != current_user %>
    <%= link_to "Book now", new_artwork_booking_path(@artwork), :class => "btn btn-primary"  %>
    <% end %>
  </div>



  <!-- Will display a map on the show page only if address a present -->
  <% if @markers %>
    <div
      id="map"
      style="width: 100%;
      height: 300px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  <% end %>

</div>
