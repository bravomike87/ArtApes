<div class="container">
  <div class="row mt-5">
    <div class="col-12 col-lg-2">
      <%= render 'shared/navigation' %>
    </div>
    <div class="col-12 col-lg-10">
      <h1>All my bookings:</h1>
      <ol>
        <% @current_user.bookings.each do |booking| %>
        <li> <%= booking.artwork.title  %> from <%= booking.start_date %> until <%= booking.end_date %><%= link_to "Delete", booking_path(booking), method: :delete, data: { confirm: "Are you sure?" } , :class => "btn btn-primary"  %> </li>
        <% end %>
      </ol>
    </div>
  </div>
</div>


