<h1>Hello <%= @profile.first_name %></h1>
<%= simple_form_for(@profile) do |f| %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= "Email: (not changeable) #{@profile.user.email}" %>
    <%= f.input :address %>
    <%# <%= f.input :avatar %>
    <%#= f.input :avatar_cache. as :hidden %>
    <%= f.submit "Save", class: "btn btn-primary" %>

<% end %>
